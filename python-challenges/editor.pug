doctype
html
	head
		title= name

		link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")

		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

		script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous")
		script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous")
		script(src="/pythonr/vs/loader.js")
		script(src="/pythonr/main.js")

		style.
			html, body {
				width: 100%;
				height: 100%;
				box-sizing: border-box;
				margin: 0;
			}

			html {
				padding: 0;
			}

			/* These are hidden, just to be used by the JavaScript */
			#text {
				display: none
			}

			input {
				margin: 5px;
			}

			.flag-form {
				display: flex;
				align-items: center;
				justify-content: flex-end;
			}

			header {
				margin-top: 0;
				padding-top: 15px;
				margin-bottom: 15px;
				box-sizing: border-box;

				border-bottom: 2px solid #f6bf22;
			}

			#container, #results {
				width: 100%;
				height: 100%;
			}

			.code-column {
				height: 800px;
			}

	body
		.container-xl
			header.row.justify-content-between
				.col
					h1(style="float:left")
						a(href="/")= name

				.col.flag-form
					form(style="float:right" action="/addflag" method="POST")
						input(type="text" name="flag" placeholder="Add a flag")

						input(type="submit" name="submit")

			.row(style="clear:both")
				if !!flag
					.col.alert.alert-success You found the flag! Flag: 
						code= flag

			.row
				.col.code-column
					#container

				.col
					pre#results= results

			.row
				#text= templateText
				form#submitter(method="POST")
					input#codeInput(type="hidden" name="code")

					button.btn.btn-primary(type="submit") Run code